#!/usr/bin/env bash
# This script checks the A records of a given domain and its subdomains

get_subdomain_info() {
    local domain=$1
    local subdomain=$2

    # Debugging output to see the query being executed
    echo "Checking A record for $subdomain.$domain..."

    # Use dig to retrieve DNS record
    local result=$(dig +short "$subdomain.$domain")

    # Debug output to show the dig result
    echo "Result from dig: $result"

    if [ -n "$result" ]; then
        echo "Your subdomain $subdomain points to your $subdomain server IP"
        echo "$result"
    else
        echo "No A record found for $subdomain.$domain"
    fi
}

# Ensure the domain argument is provided
if [ -z "$1" ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

DOMAIN=$1

# If a specific subdomain is provided, check only that one
if [ -n "$2" ]; then
    get_subdomain_info "$DOMAIN" "$2"
else
    # Check default subdomains
    for sub in www lb-01 web-01 web-02; do
        get_subdomain_info "$DOMAIN" "$sub"
    done
fi
